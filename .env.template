# Environment Configuration for Gemini TTS
# Copy this file to .env and fill in your API key

# Google AI API Key (required)
# Get your key from: https://aistudio.google.com/
GOOGLE_API_KEY=your_api_key_here

# Default TTS Model (optional)
DEFAULT_TTS_MODEL=gemini-2.5-flash-preview-tts

# Default Content Generation Model (optional)
DEFAULT_GENERATION_MODEL=gemini-2.0-flash

# Default Voice (optional)
DEFAULT_VOICE=Kore

# Default Output Directory (optional)
OUTPUT_DIR=./audio_output
